<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    android:background="#D7000000"
    android:layout_marginHorizontal="@dimen/_5sdp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_200sdp"
        android:background="#D7000000"
        >

        <ImageView
            android:id="@+id/poster_moive"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.70"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/streaming_tv_app"
            android:scaleType="fitXY"
            android:contentDescription="TODO" />
        <TextView
            android:id="@+id/text_movie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.45"
            app:layout_constraintTop_toBottomOf="@id/poster_moive"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="MovieName"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold"
            android:textSize="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/text_date_movie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_movie"
            app:layout_constraintWidth_percent="0.45"
            tools:text="23-8-2022"
            android:layout_marginBottom="@dimen/_8sdp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>